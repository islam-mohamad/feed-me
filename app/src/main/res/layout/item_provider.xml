<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="model"
            type="com.sal3awy.isalm.rssreader.rss.model.entities.Provider" />

        <variable
            name="callback"
            type="com.sal3awy.isalm.rssreader.rss.view.callback.ProvidersCallback" />
    </data>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp"
        app:cardCornerRadius="8dp"
        android:layout_margin="4dp"
        android:layout_gravity="center"
        android:onClick="@{()->callback.onProviderClicked(model)}">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:text="@{model.name}"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                app:typeFace="@{@string/font_bold}"
                tools:text="Provider Name" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="@{()->callback.onDeleteProviderClicked(model)}"
                android:padding="8dp"
                android:src="@drawable/ic_delete" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</layout>